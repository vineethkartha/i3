;
;==========================================================

[colors]
;; Based on Nord theme
polar-night1 = #2E3440
polar-night2 = #3B4252
polar-night3 = #434C5E
polar-night4 = #4C566A

snow-storm1 = #D8DEE9
snow-storm2 = #E5E9F0
snow-storm3 = #ECEFF4

frost1 = #8FBCBB
frost2 = #88C0D0
frost3 = #81A1C1
frost4 = #5E81AC

aurora_red = #BF616A
aurora_amber = #D08770
aurora_yellow = #EBCB8B
aurora_green = #A3BE8C
aurora_pink = #B48EAD

;; Active Colors
background = ${colors.polar-night2}
foreground = ${colors.snow-storm3}
;; Inactive colours
fg-inactive = ${colors.polar-night4}

alert = ${colors.aurora_red}

;==========================================================
;     TOP BAR
;==========================================================
[bar/top]
width = 100%
height = 40
radius = 20
fixed-center = true
dim-value = 0
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = "FontAwesome:size=18:style=Bold"
font-1 = "FontAwesome:size=10:style=Regular"
font-2 = "Monospace:size=18:style=Bold"

enable-ipc = true

modules-left = i3
modules-center = popcal
modules-right = updates pulseaudio-control wifi-ssid-strength eth-conn memory cpu powermenu

tray-position = none
tray-detached = false
tray-padding = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize
separator = ""
;==========================================================

;==========================================================
;     BOTTOM BAR
;==========================================================
[bar/bottom]
bottom = true
width = 100%
height = 40
radius = 0
fixed-center = true
dim-value = 0
background = ${colors.polar-night1}
foreground = ${colors.foreground}
line-size = 2
padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2


font-0 = "FontAwesome:size=18:style=Bold"
font-1 = "FontAwesome:size=10:style=Regular"
font-2 = "Monospace:size=18:style=Bold"

enable-ipc = true

modules-left = menu wifi-download wifi-upload eth-download eth-upload 
modules-center = spotify-album spotify spotify-prev spotify-play-pause spotify-next
modules-right = wifi-ipv4 eth-ipv4	      	      

tray-position = right
tray-detached = false
tray-padding = 10
tray-background = ${colors.frost4}
tray-scale = 1.0

cursor-click = pointer
cursor-scroll = ns-resize
separator = ""
;==========================================================


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.aurora_yellow}

; focused = Active workspace on focused monitor
label-focused = %name% 
label-focused-background = ${colors.polar-night4}
label-focused-foreground =${colors.snow-storm3}
label-focused-padding = 5

; unfocused = Inactive workspace on any monitor
label-unfocused = %name% 
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.fg-inactive}

; visible = Active workspace on unfocused monitor
;;label-visible = %name%
;;label-visible-background = ${self.label-focused-background}
;;label-visible-underline = ${self.label-focused-underline}
;;label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name% 
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
label-separator = " "

[module/popcal]
type = custom/script
exec = $HOME/.config/i3/scripts/calendar_pop.sh
interval = 5
click-left = $HOME/.config/i3/scripts/calendar_pop.sh --popup &

format-prefix = " " 
format-prefix-foreground = ${colors.frost3}
format-background = ${colors.background}
format-foreground = ${colors.frost3}
#format-underline= ${colors.frost2}


[module/spotify-album]
type = custom/script
interval = 1
tail = true
format-prefix = "  "
format = <label>
format-foreground = ${colors.aurora_green}
exec = playerctl --player=spotify metadata --format {{album}}

[module/spotify]
type = custom/script
tail = true
format-prefix = ": "
format = <label>
format-foreground = ${colors.aurora_green}
exec = ~/.config/i3/scripts/spotify/spotify_scroll_status.sh

[module/spotify-prev]
type = custom/script
exec = echo ""
format = <label>
click-left = playerctl previous spotify
format-foreground = ${colors.aurora_amber}

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
initial = 1
click-left = playerctl play-pause spotify
format-foreground = ${colors.frost3}

[module/spotify-next]
type = custom/script
exec = echo ""
format = <label>
click-left = playerctl next spotify
format-foreground = ${colors.aurora_amber}

[module/spotify1]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python3 $HOME/.config/i3/scripts/polybar-spotify.py -f '{album}: {song} {play_pause} ' -p '[],[]' --playpause-font=1
click-left = python3 $HOME/.config/i3/scripts/polybar-spotify.py -p ',' --playpause-font=1 --command 'toggle'
scroll-up = python3 $HOME/.config/i3/scripts/polybar-spotify.py -p ',' --playpause-font=1 --command 'prev'
scroll-down = python3 $HOME/.config/i3/scripts/polybar-spotify.py -p ',' --playpause-font=1 --command 'next'
format-prefix-foreground = ${colors.aurora_green}
format-foreground = ${colors.snow-storm3}

[module/updates]
type = custom/script
interval = 600
format-prefix = " "
format = <label>
exec = $HOME/.config/i3/scripts/update_list.sh default
click-left = $HOME/.config/i3/scripts/update_list.sh list
click-right = $HOME/.config/i3/scripts/update_list.sh update
format-prefix-foreground = ${colors.aurora_pink}
format-foreground = ${colors.aurora_pink}

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.aurora_amber}
label = %percentage%%
label-foreground = ${colors.aurora_amber}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.aurora_yellow}
label = %gb_used%
#format-underline = ${colors.yellow}
format-foreground = ${colors.aurora_yellow}

[module/wifi-ssid-strength]
type = internal/network
interface = wlp39s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = " "   
label-connected = %signal%% 
format-connected-prefix-foreground = ${colors.frost1}
format-connected-foreground = ${colors.frost1}

[module/wifi-download]
type = internal/network
interface = wlp39s0
interval = 3.0
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix = " "   
label-connected =  %downspeed%
format-connected-prefix-foreground = ${colors.aurora_green}
label-connected-foreground = ${colors.aurora_green}

[module/wifi-upload]
type = internal/network
interface = wlp39s0
interval = 3.0
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix = " "   
label-connected =  %upspeed%
format-connected-prefix-foreground = ${colors.aurora_red}
label-connected-foreground = ${colors.aurora_red}

[module/wifi-ipv4]
type = internal/network
interface = wlp39s0
interval = 3.0
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix = " "   
label-connected =  %local_ip%
format-connected-prefix-foreground = ${colors.frost1}
label-connected-foreground = ${colors.frost1}

[module/eth-conn]
type = internal/network
interface = enp37s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = " "   
label-connected = %linkspeed% 
format-connected-prefix-foreground = ${colors.frost1}
format-connected-foreground = ${colors.frost1}

[module/eth-download]
type = internal/network
interface = enp37s0
;wlp39s0
interval = 3.0
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix = " "   
label-connected =  %downspeed%
format-connected-prefix-foreground = ${colors.aurora_green}
label-connected-foreground = ${colors.aurora_green}

[module/eth-upload]
type = internal/network
interface = enp37s0
;wlp39s0
interval = 3.0
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix = " "   
label-connected =  %upspeed%
format-connected-prefix-foreground = ${colors.aurora_red}
label-connected-foreground = ${colors.aurora_red}

[module/eth-ipv4]
type = internal/network
interface = enp37s0
;wlp39s0
interval = 3.0
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix = " "   
label-connected =  %local_ip%
format-connected-prefix-foreground = ${colors.frost1}
label-connected-foreground = ${colors.frost1}


[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%
format-foreground = ${colors.aurora_green}
exec = ~/.config/i3/scripts/pulseaudio.sh listen
click-right = exec pavucontrol &
click-left = ~/.config/i3/scripts/pulseaudio.sh togmute
click-middle = ~/.config/i3/scripts/pulseaudio.sh next-sink
scroll-up = ~/.config/i3/scripts/pulseaudio.sh up
scroll-down = ~/.config/i3/scripts/pulseaudio.sh down
label-padding = 2

[module/powermenu]
type = custom/text
interval = 1
content = ""
content-foreground = ${colors.aurora_red}
click-left = $HOME/.config/i3/scripts/exit_menu.sh

[module/menu]
type = custom/script
interval = 10
format-prefix = " "
format = <label>
exec = echo " "
click-left = $HOME/.config/i3/scripts/app_menu.sh
format-prefix-foreground = ${colors.aurora_amber}
format-foreground = ${colors.aurora_amber}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
